---
import { ArrowRight, Github, Twitter, Linkedin, Mail, Cpu, LineChart, Code2, Rocket, Sun, Moon } from 'lucide-astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Galaxy Built - Developer Portfolio & Projects" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-SD1015FGKZ"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-SD1015FGKZ');
		</script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="generator" content={Astro.generator} />
		<title>{title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">

		<!-- OG Meta Tags -->
		<meta property="og:title" content={title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL('/og-hero.jpg', Astro.site)} />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL('/og-hero.jpg', Astro.site)} />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Galaxy Built",
				"url": "https://galaxybuilt.dev",
				"image": "https://galaxybuilt.dev/images/logo.jpg",
				"sameAs": [
					"https://github.com/galaxybuilt",
					"https://x.com/galaxybuilt",
					"https://www.linkedin.com/in/galaxybuilt/"
				],
				"jobTitle": "Developer & Systems Architect",
				"description": "Institutional-grade SaaS platforms, autonomous AI workflows, and proprietary trading systems."
			}
		</script>

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();
		
			if (theme === 'light') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
			window.localStorage.setItem('theme', theme);
		</script>
	</head>
	<body class="selection:bg-accent-blue/30 selection:text-white transition-colors duration-500">
		<div class="mesh-bg"></div>
		<div class="noise-overlay"></div>
		
		<nav class="fixed top-0 w-full z-50 px-4 md:px-6 py-4 flex justify-center">
			<div class="max-w-7xl w-full flex items-center justify-between px-4 md:px-6 py-3 glass-card rounded-2xl">
				<a href="/" class="flex items-center gap-2 md:gap-3 group">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-8 h-8 md:w-10 md:h-10 rounded-lg md:rounded-xl object-cover ring-2 ring-white/10 group-hover:ring-accent-blue/50 transition-all" />
					<span class="text-lg md:text-2xl font-black font-display tracking-tight text-slate-900 dark:text-white hover:text-accent-blue transition-colors">GALAXY<span class="text-accent-blue font-light">BUILT</span></span>
				</a>
				
				<div class="hidden md:flex items-center gap-8 font-medium text-sm text-slate-500 dark:text-slate-400">
					<a href="#saas" class="hover:text-black dark:hover:text-white transition-colors">SaaS</a>
					<a href="#megablogs" class="hover:text-black dark:hover:text-white transition-colors">Megablogs</a>
					<a href="#trading" class="hover:text-black dark:hover:text-white transition-colors">Trading</a>
					<a href="#software" class="hover:text-black dark:hover:text-white transition-colors">Software</a>
					
					<button id="themeToggle" class="p-2 rounded-xl bg-black/5 dark:bg-white/5 hover:bg-black/10 dark:hover:bg-white/10 text-slate-500 dark:text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Moon class="block dark:hidden" size={20} />
						<Sun class="hidden dark:block" size={20} />
					</button>

					<a href="https://x.com/galaxybuilt" target="_blank" class="hover:text-black dark:hover:text-white transition-colors">
						<Twitter size={18} />
					</a>
				</div>

					<button id="themeToggleMobile" class="md:hidden p-2 rounded-xl bg-black/5 dark:bg-white/5 hover:bg-black/10 dark:hover:bg-white/10 text-slate-500 dark:text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Moon class="block dark:hidden" size={20} />
						<Sun class="hidden dark:block" size={20} />
					</button>

					<a href="/contact" class="btn-primary text-[10px] md:text-xs tracking-widest uppercase px-4 md:px-6">
						Contact me
					</a>
			</div>
		</nav>

		<script>
			// Theme Toggle
			const handleToggleClick = () => {
				const element = document.documentElement;
				element.classList.toggle("dark");
				
				const isDark = element.classList.contains("dark");
				localStorage.setItem("theme", isDark ? "dark" : "light");
			};
		
			document.getElementById("themeToggle")?.addEventListener("click", handleToggleClick);
			document.getElementById("themeToggleMobile")?.addEventListener("click", handleToggleClick);

			// Interactive Mesh Background
			document.addEventListener('mousemove', (e) => {
				const x = (e.clientX / window.innerWidth) * 100;
				const y = (e.clientY / window.innerHeight) * 100;
				
				document.documentElement.style.setProperty('--x', `${x}%`);
				document.documentElement.style.setProperty('--y', `${y}%`);
				document.documentElement.style.setProperty('--nx', `${100 - x}%`);
				document.documentElement.style.setProperty('--ny', `${y}%`);
			});

			// Reveal on Scroll
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -50px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('active');
					}
				});
			}, observerOptions);

			document.querySelectorAll('.reveal-on-scroll').forEach(el => observer.observe(el));
		</script>

		<main class="relative pt-32 pb-20 px-6">
			<slot />
		</main>

		<footer class="py-12 px-6 border-t border-black/5 dark:border-white/5 bg-slate-50/80 dark:bg-galaxy-950/50 backdrop-blur-sm">
			<div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
				<div class="flex items-center gap-3 opacity-50">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-8 h-8 rounded-lg grayscale" />
					<span class="font-display font-bold tracking-tighter">GALAXYBUILT Â© 2026</span>
				</div>
				<div class="flex flex-wrap justify-center gap-6 text-sm text-slate-500">
					<a href="mailto:dev@everrank.app" class="hover:text-black dark:hover:text-white transition-colors">Contact</a>
					<a href="https://github.com/GalaxyBuilt/GalaxyBuilt" class="hover:text-black dark:hover:text-white transition-colors">GitHub</a>
					<a href="https://x.com/galaxybuilt" class="hover:text-black dark:hover:text-white transition-colors">X / Twitter</a>
					<a href="https://www.linkedin.com/in/galaxybuilt/" class="hover:text-black dark:hover:text-white transition-colors">LinkedIn</a>
					<a href="https://dev.txchyon.com" class="hover:text-black dark:hover:text-white transition-colors">Blog</a>
				</div>
			</div>
		</footer>
	</body>
</html>
