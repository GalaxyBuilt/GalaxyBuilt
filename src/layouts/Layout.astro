---
import { ArrowRight, Github, Twitter, Linkedin, Mail, Cpu, LineChart, Code2, Rocket, Sun, Moon, Menu, X, ChevronDown, ArrowUp, Music, Youtube } from 'lucide-astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Galaxy Built - Developer Portfolio & Projects" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-SD1015FGKZ"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-SD1015FGKZ');
		</script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="generator" content={Astro.generator} />
		<title>{title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">

		<!-- OG Meta Tags -->
		<meta property="og:site_name" content="Galaxy Built" />
		<meta property="og:title" content={title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://galaxybuilt.dev/og-hero.jpg" />
		<meta property="og:image:secure_url" content="https://galaxybuilt.dev/og-hero.jpg" />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Galaxy Built - Institutional-Grade AI & SaaS Infrastructure" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@galaxybuilt" />
		<meta name="twitter:creator" content="@galaxybuilt" />
		<meta name="twitter:title" content={title.includes('Galaxy Built') ? title : `${title} | Galaxy Built`} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="https://galaxybuilt.dev/og-hero.jpg" />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Galaxy Built",
				"url": "https://galaxybuilt.dev",
				"image": "https://galaxybuilt.dev/images/logo.jpg",
				"sameAs": [
					"https://github.com/galaxybuilt",
					"https://x.com/galaxybuilt",
					"https://www.linkedin.com/in/galaxybuilt/"
				],
				"jobTitle": "Developer & Systems Architect",
				"description": "Institutional-grade SaaS platforms, autonomous AI workflows, and proprietary trading systems."
			}
		</script>

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();
		
			if (theme === 'light') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
			window.localStorage.setItem('theme', theme);
		</script>
	</head>
	<body class="selection:bg-accent-blue/30 selection:text-white transition-colors duration-500">
		<div id="cursor" class="custom-cursor hidden md:block">
			<div class="galaxy-core"></div>
			<div class="galaxy-arm galaxy-arm-1"></div>
			<div class="galaxy-arm galaxy-arm-2"></div>
			<div class="galaxy-arm galaxy-arm-3"></div>
		</div>
		
		<!-- System Status Ticker -->
		<div class="fixed top-0 w-full z-[60] bg-[#0c0a1d]/90 dark:bg-galaxy-950/80 backdrop-blur-md border-b border-accent-purple/20 py-1.5 overflow-hidden flex items-center shadow-[0_0_15px_rgba(217,70,239,0.1)]">
			<div class="flex whitespace-nowrap animate-marquee">
				<div class="flex items-center gap-8 px-4 text-[9px] font-mono tracking-[0.2em] text-accent-cyan/60 uppercase">
					<span>[SYSTEM: <span class="text-emerald-500">ONLINE</span>]</span>
					<span>[TOPICAL AUTHORITY: <span class="text-white">SCALING</span>]</span>
					<span>[GENESIS TRADING: <span class="text-white">ACTIVE</span>]</span>
					<span>[AI NEURAL SYNC: <span class="text-accent-blue">STRIKE READY</span>]</span>
					<span>[GALAXY BUILT PROTOCOL: <span class="text-white">ESTABLISHED</span>]</span>
					<span>[INFRASTRUCTURE: <span class="text-white">INSTITUTIONAL GRADE</span>]</span>
				</div>
				<div class="flex items-center gap-8 px-4 text-[9px] font-mono tracking-[0.2em] text-accent-cyan/60 uppercase">
					<span>[SYSTEM: <span class="text-emerald-500">ONLINE</span>]</span>
					<span>[TOPICAL AUTHORITY: <span class="text-white">SCALING</span>]</span>
					<span>[GENESIS TRADING: <span class="text-white">ACTIVE</span>]</span>
					<span>[AI NEURAL SYNC: <span class="text-accent-blue">STRIKE READY</span>]</span>
					<span>[GALAXY BUILT PROTOCOL: <span class="text-white">ESTABLISHED</span>]</span>
					<span>[INFRASTRUCTURE: <span class="text-white">INSTITUTIONAL GRADE</span>]</span>
				</div>
			</div>
		</div>

		<div class="mesh-bg"></div>
		<div class="noise-overlay"></div>
		
		<nav class="fixed top-9 w-full z-[70] px-4 md:px-6 py-4 flex justify-center">
			<div class="max-w-7xl w-full flex items-center justify-between px-4 md:px-6 py-3 glass-card rounded-2xl relative shadow-2xl transition-all duration-300">
				<!-- Brand -->
				<a href="/" class="flex items-center gap-2 md:gap-3 group">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-8 h-8 md:w-10 md:h-10 rounded-lg md:rounded-xl object-cover ring-2 ring-white/10 group-hover:ring-accent-blue/50 transition-all" />
					<span class="text-lg md:text-2xl font-black font-display tracking-tight text-slate-900 dark:text-white hover:text-accent-blue transition-colors">GALAXY<span class="text-accent-blue font-light">BUILT</span></span>
				</a>
				
				<!-- Desktop Navigation -->
				<div class="hidden md:flex items-center gap-8 font-medium text-sm text-slate-500 dark:text-slate-400">
					<!-- Teleport Dropdown -->
					<div class="relative group/dropdown">
						<button class="flex items-center gap-1.5 hover:text-black dark:hover:text-white transition-colors cursor-pointer py-2">
							Explore Systems <ChevronDown size={14} />
						</button>
						<div class="absolute top-full left-1/2 -translate-x-1/2 mt-2 w-56 opacity-0 translate-y-2 pointer-events-none group-hover/dropdown:opacity-100 group-hover/dropdown:translate-y-0 group-hover/dropdown:pointer-events-auto transition-all duration-300">
							<div class="glass-card rounded-2xl p-2 border border-white/10 shadow-2xl backdrop-blur-2xl bg-white/5 overflow-hidden">
								<a href="#saas" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 hover:text-accent-blue transition-all group">
									<Rocket size={16} /> SaaS Platforms
								</a>
								<a href="#megablogs" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 hover:text-accent-blue transition-all group">
									<Cpu size={16} /> Megablogs
								</a>
								<a href="#trading" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 hover:text-accent-blue transition-all group">
									<LineChart size={16} /> Trading Systems
								</a>
								<a href="#software" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 hover:text-accent-blue transition-all group">
									<Code2 size={16} /> Software & Tools
								</a>
								<a href="#music" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/10 hover:text-accent-purple transition-all group">
									<Music size={16} /> Music Licensing
								</a>
							</div>
						</div>
					</div>

					<button id="themeToggle" class="p-2 rounded-xl bg-black/5 dark:bg-white/5 hover:bg-black/10 dark:hover:bg-white/10 text-slate-500 dark:text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Moon class="block dark:hidden" size={20} />
						<Sun class="hidden dark:block" size={20} />
					</button>

					<a href="https://x.com/galaxybuilt" target="_blank" class="hover:text-black dark:hover:text-white transition-colors">
						<Twitter size={18} />
					</a>

					<a href="/contact" class="btn-primary text-[10px] md:text-xs tracking-widest uppercase px-4 md:px-6">
						Contact me
					</a>
				</div>

				<!-- Mobile Controls -->
				<div class="flex md:hidden items-center gap-2">
					<button id="themeToggleMobile" class="p-2 rounded-xl bg-black/5 dark:bg-white/5 hover:bg-black/10 dark:hover:bg-white/10 text-slate-500 dark:text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Moon class="block dark:hidden" size={20} />
						<Sun class="hidden dark:block" size={20} />
					</button>
					<button id="mobileMenuToggle" class="p-2 rounded-xl bg-black/5 dark:bg-white/5 hover:bg-black/10 dark:hover:bg-white/10 text-slate-500 dark:text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Menu id="menuIcon" size={24} />
						<X id="closeIcon" class="hidden" size={24} />
					</button>
				</div>
			</div>

			<!-- Mobile Navigation Overlay -->
			<div id="mobileMenuOverlay" class="fixed inset-0 top-[110px] z-40 bg-galaxy-950/90 backdrop-blur-2xl opacity-0 pointer-events-none translate-y-4 transition-all duration-300 md:hidden overflow-y-auto">
				<div class="max-w-7xl mx-auto px-6 py-12 space-y-8">
					<div class="grid grid-cols-1 gap-4">
						<a href="#saas" class="mobile-nav-link"><Rocket size={20} /> SaaS Platforms</a>
						<a href="#megablogs" class="mobile-nav-link"><Cpu size={20} /> Megablogs</a>
						<a href="#trading" class="mobile-nav-link"><LineChart size={20} /> Trading Systems</a>
						<a href="#software" class="mobile-nav-link"><Code2 size={20} /> Software & Tools</a>
						<a href="#music" class="mobile-nav-link"><Music size={20} /> Music Licensing</a>
						<a href="/contact" class="mobile-nav-link text-accent-cyan"><Mail size={20} /> Contact me</a>
					</div>
					<div class="pt-8 border-t border-white/5 flex gap-4">
						<a href="https://github.com/galaxybuilt" class="p-4 rounded-2xl glass-card text-white flex-grow flex items-center justify-center gap-3">
							<Github size={20} /> GitHub
						</a>
						<a href="https://x.com/galaxybuilt" class="p-4 rounded-2xl glass-card text-white flex-grow flex items-center justify-center gap-3">
							<Twitter size={20} /> Twitter
						</a>
					</div>
				</div>
			</div>
		</nav>

		<!-- Back to Top Button -->
		<button id="backToTop" class="fixed bottom-8 right-8 z-[60] p-4 rounded-2xl glass-card text-accent-blue opacity-0 translate-y-10 scale-90 pointer-events-none hover:scale-110 hover:-translate-y-1 transition-all duration-300 shadow-2xl border-accent-blue/20">
			<ArrowUp size={24} />
		</button>

		<script>
			// Theme Toggle
			const handleToggleClick = () => {
				const element = document.documentElement;
				element.classList.toggle("dark");
				
				const isDark = element.classList.contains("dark");
				localStorage.setItem("theme", isDark ? "dark" : "light");
			};
		
			document.getElementById("themeToggle")?.addEventListener("click", handleToggleClick);
			document.getElementById("themeToggleMobile")?.addEventListener("click", handleToggleClick);

			// Interactive Mesh Background
			document.addEventListener('mousemove', (e) => {
				const x = (e.clientX / window.innerWidth) * 100;
				const y = (e.clientY / window.innerHeight) * 100;
				
				document.documentElement.style.setProperty('--x', `${x}%`);
				document.documentElement.style.setProperty('--y', `${y}%`);
				document.documentElement.style.setProperty('--nx', `${100 - x}%`);
				document.documentElement.style.setProperty('--ny', `${y}%`);
			});

			// Reveal on Scroll
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -50px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('active');
						
						// Dynamic Accent Shift Logic
						if (entry.target.tagName === 'SECTION') {
							const id = entry.target.id;
							const root = document.documentElement;
							
							if (id === 'trading') {
								root.style.setProperty('--color-accent-blue', '#8b5cf6'); // Purple
								root.style.setProperty('--color-accent-cyan', '#10b981'); // Green
							} else if (id === 'music') {
								root.style.setProperty('--color-accent-blue', '#f43f5e'); // Rose
								root.style.setProperty('--color-accent-cyan', '#e879f9'); // Pink
							} else {
								// Reset to default
								root.style.setProperty('--color-accent-blue', '#3b82f6'); 
								root.style.setProperty('--color-accent-cyan', '#22d3ee');
							}
						}
					}
				});
			}, observerOptions);

			document.querySelectorAll('.reveal-on-scroll, section[id]').forEach(el => observer.observe(el));

			// Custom Cursor Logic
			const cursor = document.getElementById('cursor');
			document.addEventListener('mousemove', (e) => {
				if (cursor) {
					cursor.style.left = e.clientX + 'px';
					cursor.style.top = e.clientY + 'px';
				}
			});

			document.querySelectorAll('a, button, [data-modal-target]').forEach(el => {
				el.addEventListener('mouseenter', () => cursor?.classList.add('hover'));
				el.addEventListener('mouseleave', () => cursor?.classList.remove('hover'));
			});

			// Mobile Menu Logic
			const mobileMenuToggle = document.getElementById('mobileMenuToggle');
			const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
			const menuIcon = document.getElementById('menuIcon');
			const closeIcon = document.getElementById('closeIcon');
			
			let isMenuOpen = false;
			
			const toggleMenu = () => {
				isMenuOpen = !isMenuOpen;
				if (isMenuOpen) {
					mobileMenuOverlay.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-4');
					menuIcon.classList.add('hidden');
					closeIcon.classList.remove('hidden');
					document.body.style.overflow = 'hidden';
				} else {
					mobileMenuOverlay.classList.add('opacity-0', 'pointer-events-none', 'translate-y-4');
					menuIcon.classList.remove('hidden');
					closeIcon.classList.add('hidden');
					document.body.style.overflow = '';
				}
			};
			
			mobileMenuToggle?.addEventListener('click', toggleMenu);
			
			// Close mobile menu on link click
			document.querySelectorAll('.mobile-nav-link').forEach(link => {
				link.addEventListener('click', () => {
					if (isMenuOpen) toggleMenu();
				});
			});

			// Back to Top Logic
			const backToTop = document.getElementById('backToTop');
			window.addEventListener('scroll', () => {
				if (window.scrollY > 500) {
					backToTop.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-10', 'scale-90');
				} else {
					backToTop.classList.add('opacity-0', 'pointer-events-none', 'translate-y-10', 'scale-90');
				}
			});
			
			backToTop?.addEventListener('click', () => {
				window.scrollTo({ top: 0, behavior: 'smooth' });
			});
		</script>

		<main class="relative pt-40 pb-20 px-6">
			<slot />
		</main>

		<footer class="py-12 px-6 border-t border-black/5 dark:border-white/5 bg-slate-50/80 dark:bg-galaxy-950/50 backdrop-blur-sm">
			<div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
				<div class="flex items-center gap-3 opacity-50">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-8 h-8 rounded-lg grayscale" />
					<span class="font-display font-bold tracking-tighter">GALAXYBUILT Â© 2026</span>
				</div>
				<div class="flex flex-wrap justify-center gap-6 text-sm text-slate-500">
					<a href="/contact" class="hover:text-black dark:hover:text-white transition-colors">Contact</a>
					<a href="https://github.com/GalaxyBuilt/GalaxyBuilt" class="hover:text-black dark:hover:text-white transition-colors">GitHub</a>
					<a href="https://x.com/galaxybuilt" class="hover:text-black dark:hover:text-white transition-colors">X / Twitter</a>
					<a href="https://www.linkedin.com/in/galaxybuilt/" class="hover:text-black dark:hover:text-white transition-colors">LinkedIn</a>
					<a href="https://dev.txchyon.com" class="hover:text-black dark:hover:text-white transition-colors">Blog</a>
				</div>
			</div>
		</footer>
	</body>
</html>
