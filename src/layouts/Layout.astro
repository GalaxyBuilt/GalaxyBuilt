---
import { ArrowRight, Github, Twitter, Linkedin, Mail, Cpu, LineChart, Code2, Rocket, Sun, Moon } from 'lucide-astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Galaxy Built - Developer Portfolio & Projects" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Galaxy Built</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				// Default to 'light' on first visit
				return 'light';
			})();
		
			if (theme === 'light') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
			window.localStorage.setItem('theme', theme);
		</script>
	</head>
	<body class="selection:bg-accent-blue/30 selection:text-white transition-colors duration-500">
		<div class="mesh-bg"></div>
		<div class="noise-overlay"></div>
		
		<nav class="fixed top-0 w-full z-50 px-6 py-4 flex justify-center">
			<div class="max-w-7xl w-full flex items-center justify-between px-6 py-3 glass-card rounded-2xl">
				<a href="/" class="flex items-center gap-3 group">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-10 h-10 rounded-xl object-cover ring-2 ring-white/10 group-hover:ring-accent-blue/50 transition-all" />
					<span class="text-2xl font-black font-display tracking-tight hover:text-accent-blue transition-colors">GALAXY<span class="text-accent-blue font-light">BUILT</span></span>
				</a>
				
				<div class="hidden md:flex items-center gap-8 font-medium text-sm text-slate-400">
					<a href="#saas" class="hover:text-white transition-colors">SaaS</a>
					<a href="#megablogs" class="hover:text-white transition-colors">Megablogs</a>
					<a href="#trading" class="hover:text-white transition-colors">Trading</a>
					<a href="#software" class="hover:text-white transition-colors">Software</a>
					
					<button id="themeToggle" class="p-2 rounded-xl bg-white/5 hover:bg-white/10 text-slate-400 hover:text-accent-blue transition-all cursor-pointer">
						<Sun class="dark:hidden" size={20} />
						<Moon class="hidden dark:block" size={20} />
					</button>

					<a href="https://x.com/galaxybuilt" target="_blank" class="hover:text-white transition-colors">
						<Twitter size={18} />
					</a>
				</div>

				<a href="mailto:exoticdevlabs@gmail.com" class="btn-primary text-xs tracking-widest uppercase">
					Connect
				</a>
			</div>
		</nav>

		<script>
			const handleToggleClick = () => {
				const element = document.documentElement;
				element.classList.toggle("dark");
				
				const isDark = element.classList.contains("dark");
				localStorage.setItem("theme", isDark ? "dark" : "light");
			};
		
			document.getElementById("themeToggle")?.addEventListener("click", handleToggleClick);
		</script>

		<main class="relative pt-32 pb-20 px-6">
			<slot />
		</main>

		<footer class="py-12 px-6 border-t border-white/5 bg-galaxy-950/50 backdrop-blur-sm">
			<div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8">
				<div class="flex items-center gap-3 opacity-50">
					<img src="/images/logo.jpg" alt="Galaxy Built Logo" class="w-8 h-8 rounded-lg grayscale" />
					<span class="font-display font-bold tracking-tighter">GALAXYBUILT Â© 2026</span>
				</div>
				<div class="flex gap-6 text-sm text-slate-500">
					<a href="https://github.com/galaxybuilt" class="hover:text-white transition-colors">GitHub</a>
					<a href="https://x.com/galaxybuilt" class="hover:text-white transition-colors">X / Twitter</a>
					<a href="https://www.linkedin.com/in/galaxybuilt/" class="hover:text-white transition-colors">LinkedIn</a>
					<a href="https://dev.txchyon.com" class="hover:text-white transition-colors">Blog</a>
				</div>
			</div>
		</footer>
	</body>
</html>
