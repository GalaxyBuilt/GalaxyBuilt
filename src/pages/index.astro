---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { ArrowRight, Github, Twitter, Linkedin, Mail, Cpu, LineChart, Code2, Rocket } from 'lucide-astro';

const saasProjects = [
	{
		title: "EverRank.app",
		description: "Autonomous SEO and content intelligence platform that helps creators, marketers, and businesses discover, optimize, and track content and rankings automatically. Built as an all-in-one autonomous SEO command center with AI-powered insights, keyword tracking, and competitor analysis.",
		url: "https://EverRank.app",
		type: "saas",
		tags: ["SEO", "AI", "Automation", "Content Intelligence"]
	},
	{
		title: "FastAIFlow.com",
