	{
		title: "Project Genesis",
		description: "Institutional-grade automated Bitcoin trading system built for professional-level execution and capital preservation. Combines advanced market analysis, multi-strategy support, and modular AI agents for scalable gains.",
		type: "trading",
		tags: ["Bitcoin", "Algo-Trading", "Risk Management", "AI Agents"]
	},
	{
		title: "Project Ultima",
		description: "Secret Research System - An institutional-grade platform for advanced market intelligence and predictive modeling. High-performance data analysis for sophisticated trading environments.",
		type: "trading",
		tags: ["Market Intelligence", "Secret Research", "Predictive Analytics"]
	},
	{
		title: "Project Omega",
		description: "Secret Pumpfun System - Specialized automated system for high-velocity decentralized market opportunities. Focused on rapid execution and liquidity positioning.",
